{
  "manifest_version": 3,
  "name": "WebAvenger",
  "version": "1.0.0",
  "permissions": ["declarativeNetRequest", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "host_permissions": ["*://*/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "popup.html"
  }
}
